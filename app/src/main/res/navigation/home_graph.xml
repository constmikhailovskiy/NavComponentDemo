<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_graph"
    app:startDestination="@id/eventsListFragment">
    <fragment
        android:id="@+id/eventsListFragment"
        android:name="com.navigation.demo.home.events.EventsListFragment"
        android:label="EventsListFragment" />
    <fragment
        android:id="@+id/contestFragment"
        android:name="com.navigation.demo.home.contest.ContestFragment"
        android:label="ContestFragment" >

        <action
            android:id="@+id/action_contestFragment_to_contestApplicationFormFragment"
            app:destination="@id/contestApplicationFormFragment"/>
    </fragment>
    <fragment
        android:id="@+id/questFragment"
        android:name="com.navigation.demo.home.quest.QuestFragment"
        android:label="QuestFragment" />

    <fragment
        android:id="@+id/contestApplicationFormFragment"
        android:name="com.navigation.demo.home.contest.ContestApplicationFormFragment"
        android:label="ContestApplicationFormFragment"/>

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="com.navigation.demo.home.terms.PrivacyPolicyFragment"
        android:label="PrivacyPolicyFragment"/>

    <action
        android:id="@+id/action_privacyPolicy"
        app:destination="@id/privacyPolicyFragment" />
</navigation>